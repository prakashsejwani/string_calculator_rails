<div style="max-width: 640px; margin: 40px auto; font-family: system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif;">
  <h1>String Calculator</h1>

  <%= form_with url: string_calculators_path, method: :post do |f| %>
    <label for="numbers">Enter numbers string</label>
    <textarea id="numbers" name="numbers" rows="4" style="width: 100%; margin-top: 8px"></textarea>
    <div style="margin-top: 12px">
      <button type="submit">Calculate</button>
    </div>
  <% end %>

  <p style="margin-top: 16px; color: #666;">
    Examples: <code>1,2</code> or <code>1\n2,3</code> or <code>//[***]\n1***2***3</code>
  </p>
</div>


